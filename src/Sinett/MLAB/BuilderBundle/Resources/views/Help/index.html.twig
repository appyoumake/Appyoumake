{% extends app.request.xmlHttpRequest ? '::ajax.html.twig' : '::base.html.twig' %}

{% block body -%}
    <h1>Help list</h1>

    <table class="records_list" id="table_help">
        <thead>
            <tr>
                <th>Route</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
	        {% for entity in entities %}
		        {{ include( 'SinettMLABBuilderBundle:Help:show.html.twig', { 'entity': entity } ) }}
	        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('help_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
